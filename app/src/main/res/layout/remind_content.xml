<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/info_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="会议一"
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/info_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="10:30"
            android:textColor="#a1a1a1" />

        <ImageView
            android:id="@+id/remind_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/info_content_time"
            android:background="@drawable/home_remind_clock" />
    </RelativeLayout>

    <TextView
        android:id="@+id/remind_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:text="这次真定了 特朗普被提名为诺贝尔和平奖候选人"
        android:textColor="#222222"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/remind_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:text="地点: 二楼会议室"
        android:textColor="#a1a1a1"
        android:textSize="12sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.4dp"
        android:layout_marginTop="10dp"
        android:background="#aaaaaa"

        ></View>

</LinearLayout>