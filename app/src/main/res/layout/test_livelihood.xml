<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fonticontext="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundGrey">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView style="@style/img"
                    android:src="@drawable/img_livelihood_bg"/>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="32dp"
                        android:paddingRight="32dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginBottom="@dimen/medium_big_margin"
                                style="@style/text"
                                android:textColor="@color/colorWhite"
                                android:text="当前指数"/>
                            <TextView style="@style/text"
                                android:textSize="28dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:text="98.4"/>

                        </LinearLayout>
                        <Space android:layout_weight="1" android:layout_width="0dp" android:layout_height="0dp" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginBottom="@dimen/medium_big_margin"
                                style="@style/text"
                                android:textColor="@color/colorWhite"
                                android:text="历史最高"/>
                            <TextView style="@style/text"
                                android:textSize="28dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:text="98.4"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="44dp"
                        android:layout_marginLeft="@dimen/medium_big_margin"
                        android:layout_marginRight="@dimen/medium_big_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView style="@style/text.small"
                                android:textColor="@color/colorWhite"
                                android:text="收入上升"/>
                            <TextView
                                android:layout_marginTop="@dimen/medium_margin"
                                style="@style/text.normalSmaller"
                                android:textColor="@color/colorWhite"
                                android:text="18%"/>
                        </LinearLayout>
                        <Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView style="@style/text.small"
                                android:textColor="@color/colorWhite"
                                android:text="收入上升"/>
                            <TextView
                                android:layout_marginTop="@dimen/medium_margin"
                                style="@style/text.medium"
                                android:textColor="@color/colorWhite"
                                android:text="10%"/>
                        </LinearLayout>
                        <Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                        <LinearLayout
                            android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView style="@style/text.small"
                                android:textColor="@color/colorWhite"
                                android:text="收入上升"/>
                            <TextView
                                android:layout_marginTop="@dimen/medium_margin"
                                style="@style/text.medium"
                                android:textColor="@color/colorWhite"
                                android:text="90%"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <com.linewell.core.view.FontIconText
                    fonticontext:typefacename="icon_font.ttf"
                    style="@style/text.small"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/medium_big_margin"
                    android:textColor="@color/colorWhite"
                    android:text="@string/icon_arrow_right"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>