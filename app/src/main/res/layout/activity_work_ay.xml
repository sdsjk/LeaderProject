<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f6f6"
    >
    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_header_bg"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
<include layout="@layout/info_title_common"></include>
<RelativeLayout
    android:id="@+id/work_duban"
    android:layout_marginTop="9dp"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/work_duban"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="督察督办"
            android:layout_marginLeft="10dp"
            android:textColor="#272727"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/work_db_dot"
            android:text="1"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/work_into"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="7dp"
            />
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/work_myemail"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@drawable/work_email"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="我的邮件"
                android:layout_marginLeft="10dp"
                android:textColor="#272727"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >
            <TextView
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/work_db_dot"
                android:text="1"
                android:textColor="#ffffff"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/work_into"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="7dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#aaaaaa"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        ></View>
    <RelativeLayout
        android:id="@+id/work_myword"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@drawable/work_myword"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="我的公文"
                android:layout_marginLeft="10dp"
                android:textColor="#272727"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/work_db_dot"
                android:text="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/work_into"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="7dp"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
