<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f6f6"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_header_bg"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/infomation_recyclerview"
        ></android.support.v7.widget.RecyclerView>
    <include
        android:visibility="gone"
        android:id="@+id/info_title_common"
        layout="@layout/info_title_common"
        />
    <RelativeLayout
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#00000000">
        <ImageView
            android:id="@+id/info_back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/info_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText

            android:id="@+id/home_search_ed"
            android:layout_width="300dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_raduis"
            android:drawableLeft="@drawable/home_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="输入你感兴趣的内容"
            android:paddingLeft="15dp"
            android:textSize="12dp"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

</FrameLayout>
