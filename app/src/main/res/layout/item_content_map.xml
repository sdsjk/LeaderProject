<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/normal_margin"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/medium_margin"
    android:paddingTop="@dimen/medium_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/line_blue"></View>

        <TextView
            style="@style/text.normalSmaller"
            android:layout_marginLeft="8dp"
            android:text="北京市平均气温空间分布图"
            android:textColor="@color/textDark"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/split_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/lineChart"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/beijing"></ImageView>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#59bb01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="-3.75~-0.19"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lend_paddingtop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#84cd03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="-1.75~2.78"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lend_paddingtop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#afdf00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="2.79~3.18"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lend_paddingtop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#e4f504" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="5.31~-7.73"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lend_paddingtop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#fee103" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="7.74~9.91"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lend_paddingtop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#fbad04" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="9.92~13.08"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lend_paddingtop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#ff7301" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="13.75~15.65"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lend_paddingtop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/lendsize"
                    android:layout_height="@dimen/lendsize"
                    android:background="#fd0100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="18.75~26.54"
                    android:textColor="#a1a1a1"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>