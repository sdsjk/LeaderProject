<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonticontext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundGrey"
    android:id="@+id/content_view">

    <ImageView
        style="@style/img"
        android:src="@drawable/img_economics_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingRight="@dimen/medium_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/bigger_margin">

                <TextView
                    style="@style/text"
                    android:text="399,999"
                    android:textColor="@color/colorWhite"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/text.normalSmaller"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:text="现金收支增速（元）"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <com.linewell.core.view.FontIconText
                style="@style/text.small"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/medium_big_margin"
                android:text="@string/icon_arrow_right"
                android:textColor="@color/colorWhite"
                fonticontext:typefacename="icon_font.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_big_margin"
            android:layout_marginRight="@dimen/medium_big_margin"
            android:layout_marginTop="44dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:text="18%"
                    android:textColor="@color/colorWhite" />

                <TextView
                    style="@style/text.small"
                    android:text="同比经济增长"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:text="10"
                    android:textColor="@color/colorWhite" />

                <TextView
                    style="@style/text.small"
                    android:text="拥堵路段数目"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:text="90%"
                    android:textColor="@color/colorWhite" />

                <TextView
                    style="@style/text.small"
                    android:text="路网覆盖率"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>