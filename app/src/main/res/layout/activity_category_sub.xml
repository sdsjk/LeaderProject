<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonticontext="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrey">

    <!--<include-->
        <!--layout="@layout/layout_toolbar_normal"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"></include>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:textSize="16sp"
    android:text="应用管理"
    android:gravity="center"
    android:layout_marginLeft="20dp"
    android:textColor="#272727"
    />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:id="@+id/app_manager_save"
                android:layout_width="83dp"
                android:layout_height="33dp"
                android:text="保存"
                android:gravity="center"
                android:textColor="#272727"
                android:textSize="16sp"
                android:background="@drawable/app_manager_save"
                />
            <ImageView
                android:id="@+id/app_manager_canale"
                android:layout_marginLeft="20dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/app_manager_cancel"

                />
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <LinearLayout
        android:id="@+id/layout_tag_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout></ScrollView>
</LinearLayout>