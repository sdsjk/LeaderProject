<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_list_index"
            android:layout_width="@dimen/rect_width_height"
            android:layout_height="@dimen/rect_width_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:background="@drawable/sendtimend_bk"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:text="亚非球队难逆袭"
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/info_title_content_spantop"
                android:ellipsize="end"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="顾雏军案再审#【进行法庭调查】审判员张勇健：现在质证第四组证据，分别是证据37-39、41-45、47、49、51-53,全部是证人证言"
                android:textColor="#a1a1a1"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/item_list_icon"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:src="@drawable/hotup"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/split_view"></View>
</LinearLayout>