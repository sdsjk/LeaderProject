<?xml version="1.0" encoding="utf-8"?>
    <!--网络出错时显示-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fonticontext="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/recycleview_view_error_tip_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/img_tip_fail"/>
        <TextView
            android:id="@+id/recycleview_view_error_tip_text"
            style="@style/Icon_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:text="网络出错，点击屏幕重新加载"/>
        <Button
            android:id="@+id/recycleview_view_error_tip_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button_blank_page"
            android:gravity="center"
            android:minWidth="120dp"
            android:paddingBottom="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="0dp"
            android:text="重新加载"
            android:visibility="gone"
            android:textColor="@color/textDark"
            android:textSize="15sp" />
    </LinearLayout>

    <!--网络出错时显示 end-->
