<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:text="05-28"
            android:textColor="#a1a1a1"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/work_into" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_item"

        android:orientation="vertical">

        <TextView
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:id="@+id/item_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="顾雏军:政府让我救科龙 当时最高检办案动机不纯"
            android:textColor="#272727"
            android:textSize="16sp" />

        <TextView
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:id="@+id/item_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="顾雏军案再审#【进行法庭调查】审判员张勇健：现在质证第四组证据，分别是证据37-39、41-45、47、49、51-53,全部是证人证言"
            android:textColor="#a1a1a1"
            android:textSize="12sp" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#a1a1a1"></View>
    </LinearLayout>

</RelativeLayout>